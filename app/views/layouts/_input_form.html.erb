<%= form_for(object) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <% if object.class == Station %>
      <% Line.all.each do |line| %>
        <%= check_box_tag "#{object.class.to_s.downcase}[line_ids][]", line.id %>
        <%= line.name %><br/>
      <% end %>
    <% else %>
      <% Station.all.each do |station| %>
        <%= check_box_tag "#{object.class.to_s.downcase}[station_ids][]", station.id %>
        <%= station.name %><br/>
      <% end %>
    <% end %>
  </div>
  <%= f.submit(class: "btn btn-primary") %>
<% end %>
