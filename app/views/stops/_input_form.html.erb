<%= form_for(@stop) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label "Station:" %>
    <%= f.collection_select :station_id, Station.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label "Line:" %>
    <%= f.collection_select :line_id, Line.all, :id, :name %>
  </div>
  <%= f.submit(class: "btn btn-primary") %>
<% end %>
