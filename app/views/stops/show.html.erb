<h1><%= @stop.name %></h1>
<h3>Line: <%= @stop.line.name %></h3>
<h3>Station: <%= @stop.station.name %></h3>
<p>
  <%= link_to "Edit stop", edit_stop_path(@stop), class: 'btn btn-info' %>
</p>

<p>
  <%= link_to "Delete stop", stop_path(@stop),
                                class: 'btn btn-danger',
                                data: {confirm: 'Woah, really?', method: 'delete'} %>
</p>
